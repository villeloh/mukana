<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cardView"
            app:cardElevation="8dp"
            app:cardCornerRadius="5dp"
            app:contentPadding="7dp"
            app:cardBackgroundColor="@color/colorCardPrimary"
            android:layout_margin="5dp">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tableImageHolder">
            <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="*">
                <TableRow
                        android:weightSum="100"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:elevation="10dp"
                            android:fontFamily="@font/brizel"
                            app:fontFamily="@font/brizel"
                            android:padding="6dp"
                            android:background="@drawable/card_view_item_bg_base"
                            android:layout_weight="33"
                            android:id="@+id/species"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:textAppearance="?attr/textAppearanceListItem"
                            android:layout_column="0"
                            android:textAlignment="center"
                            android:textSize="20sp"/>
                    <TextView
                            android:elevation="10dp"
                            android:fontFamily="@font/brizel"
                            app:fontFamily="@font/brizel"
                            android:padding="6dp"
                            android:background="@drawable/card_view_item_bg_base"
                            android:layout_weight="33"
                            android:id="@+id/rarity"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:textAppearance="?attr/textAppearanceListItem"
                            android:layout_column="1"
                            android:textAlignment="center"
                            android:textSize="20sp"/>
                    <TextView
                            android:elevation="10dp"
                            android:fontFamily="@font/brizel"
                            app:fontFamily="@font/brizel"
                            android:padding="6dp"
                            android:background="@drawable/card_view_item_bg_base"
                            android:layout_weight="33"
                            android:id="@+id/date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:textAppearance="?attr/textAppearanceListItem"
                            android:layout_column="2"
                            android:textAlignment="center"
                            android:textSize="20sp"/>
                </TableRow>
                <TableRow
                        android:weightSum="1000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:elevation="10dp"
                            android:fontFamily="@font/brizel"
                            app:fontFamily="@font/brizel"
                            android:padding="6dp"
                            android:background="@drawable/card_view_item_bg_base"
                            android:layout_weight="666"
                            android:id="@+id/notes"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:textAppearance="?attr/textAppearanceListItem"
                            android:layout_column="0"
                            android:textAlignment="center"
                            android:textSize="18sp"/>
                    <TextView
                            android:padding="3dp"
                            android:layout_weight="1"
                            android:id="@+id/filler"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:textAppearance="?attr/textAppearanceListItem"
                            android:layout_column="1"/>
                    <TextView
                            android:elevation="10dp"
                            android:fontFamily="@font/brizel"
                            app:fontFamily="@font/brizel"
                            android:padding="6dp"
                            android:background="@drawable/card_view_item_bg_base"
                            android:layout_weight="333"
                            android:id="@+id/geoloc"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:textAppearance="?attr/textAppearanceListItem"
                            android:layout_column="2"
                            android:textAlignment="center"
                            android:textSize="20sp"/>
                </TableRow>
            </TableLayout>
            <ImageView
                    android:layout_margin="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    app:srcCompat="@drawable/card_view_item_bg_base"
                    android:visibility="gone"
                    android:adjustViewBounds="true"
                    android:id="@+id/imageView"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
